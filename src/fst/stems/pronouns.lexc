+Loc+Sg3:%^WG%>сесь # ;
+Loc+Pl1:%^WG%>eсaн # ;
+Loc+Pl2:%^WG%>eсaнт # ;
+Loc+Pl3:%^WG%>eсесь # ;
+Ill+Sg1:%>сан # ;
